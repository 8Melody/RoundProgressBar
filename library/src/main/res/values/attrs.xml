<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RoundProgressBar">
        <!--外弧的宽度-->
        <attr name="sweep_stroke_width" format="dimension|reference" />
        <!--外弧的颜色-->
        <attr name="sweep_stroke_color" format="color|reference" />
        <!--外弧的起始位置默认是-90-->
        <attr name="sweep_start_angle" format="integer" />
        <!--中间的文本-->
        <attr name="center_text" format="string|reference" />
        <!--中间文本的大小-->
        <attr name="center_text_size" format="dimension|reference" />
        <!--中间文本的颜色-->
        <attr name="center_text_color" format="color|reference" />
        <!--中间的背景颜色-->
        <attr name="center_background" format="color|reference" />
        <!--倒计时的总时间(毫秒)-->
        <attr name="count_down_time_millis" format="integer" />
        <!--是否自动开始计时-->
        <attr name="auto_start" format="boolean" />
        <attr name="progress_direction" format="enum">
            <enum name="forward" value="0" /><!--正-->
            <enum name="reverse" value="1" /><!--反-->
        </attr>
    </declare-styleable>
</resources>